{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "@typescript-eslint/no-unused-vars": [
            "off"
        ],
        "keyword-spacing": [
            "error",
            {
                "overrides":
                {
                    "if":
                    {
                        "after": false
                    },
                    "for":
                    {
                        "after": false
                    },
                    "while":
                    {
                        "after": false
                    },
                    "switch":
                    {
                        "after": false
                    }
                }
            }
        ],
        "@typescript-eslint/ban-types": [
            "error",
            {
                "types":
                {
                    "String": true,
                    "Boolean": true,
                    "Number": true,
                    "Symbol": true,
                    "{}": false,
                    "Object": false,
                    "object": false,
                    "Function": false
                },
                "extendDefaults": true
            }
        ]

    }
}
